<% @shifty = Shift.find(shift_series_item.id) %>
<tr>
	<td style="text-align:center;width:30px">
		<input type="checkbox" value=<%= shift_series_item.id %>>
	</td>
	<td><%= link_to shift_series_item.id, @shifty %></td>
	<td style="font-family:Lucida Console, monospace"><%= shift_series_item.start_datetime.strftime("%a %d %b") %></td>
	<td><%= shift_series_item.fk_user_worker.nil? ? "(open)" : User.find(shift_series_item.fk_user_worker).name %></td>
	<td><%= shift_number_of_offers(@shifty) %> / <%= shift_number_of_requests(@shifty) %></td>
	
</tr>