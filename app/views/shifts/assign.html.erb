<div class="span3">
        <ul class="nav nav-pills nav-stacked">
        
            <li><%= link_to "Back to shift info", @shift %></li>        
        
      </ul>
</div>

<div class="span6">

<%  %>
<h4>Assign shift - <%= @shift.role %> @ <%= Firm.find(@shift.firm_id).name %></h4>

<% if @assignable_users_items.any? %>
	<table class="table table-hover">
    	<thead>
    		<tr>
    			<th>Name</th><th></th><th>Shifts last 7d</th><th>Shifts next 7d</th><th>Total shifts worked</th>
    				</tr>
    			</thead>
    			<tbody>

	<%= render partial: 'assignable_users_item', collection: @assignable_users_items %>
 	<% will_paginate @assignable_users_items %>

 	    		</tbody>
    		</table>

 <% else %>
 	<div class="alert alert-info">You have no available users in your network. <a href="/invite">Click here</a> to add more users to your network.</div>
 <% end %>

</div>

<script>
$('tr').click( function() {
    window.location = $(this).find('a').attr('href');
}).hover( function() {
    $(this).toggleClass('hover');
});
</script>