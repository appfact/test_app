<div class="span3">
    <ul class="nav nav-pills nav-stacked">
    <li class="active">
    <a href="#">Confirmed Holidays (<%= confirmed_holidays.length %>) </a>
    </li>
    <li><%= link_to "Holiday Requests (#{holidays_requests.length})", "userholidayrequests" %></li>
    <li><%= link_to "Unavailable times (#{unavailables.length})", "userunavailable" %></li>
    </ul>
</div>

<div class="span6">
	
	
	<% if confirmed_holidays.any? %>
		
		    <table class="table">
    			<thead>
    				<tr>
    					<th>Date</th><th>Hours</th><th>Reason</th>
    				</tr>
    			</thead>
    			<tbody>
                    <%= render partial: 'confirmed_holiday', collection: confirmed_holidays %>    				
    			</tbody>
    		</table>

    <% else %>
    <div class="alert alert-info">You have no confirmed holidays</div>
    <% end %>
	</div>