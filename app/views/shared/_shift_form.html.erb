<%= form_for(@shift) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
   
 	<%= f.label :start_time %>
    <%= f.text_field :start_time %>

 	<%= f.label :end_time %>
    <%= f.text_field :end_time %>

 	<%= f.label :role %>
    <%= f.text_field :role %>

    <%= f.label :fk_user_worker %>
    <%= f.text_field :fk_user_worker %>

    <%= f.text_area :description, placeholder: "Describe the duties of this shift" %>
  </div>
  <%= f.submit "Post", class: "btn btn-large btn-primary" %>
<% end %>