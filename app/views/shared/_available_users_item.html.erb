  <% @user = User.find(available_users_item.user_id) %>
  <% @shift = Shift.find(params[:id]) %>
  <% @shift.shift_requests.find_by_worker_id(@user.id).nil? ? @request = nil : 
                @request = @shift.shift_requests.find_by_worker_id(@user.id) %>


<% if @request == nil %>

<tr>
  <td><a href= <%= "offer_shift_to_worker?workerid=#{@user.id}" %>><%= @user.name %></a></td>
  <td><%= user_available(@shift, @user) %></td>
  <td><%= shifts_prev_7d(@user) %></td>
  <td><%= shifts_next_7d(@user) %></td>
  <td><%= shifts_total(@user) %></td>
</tr>

<% else %>

  <% if @request.worker_status == nil %>

  <tr class="success">
    <td><a href= <%= "unoffer_shift_to_worker?workerid=#{@user.id}" %>><%= @user.name %> (Cancel Offer)</a></td>
    <td><%= user_available(@shift, @user) %></td>
    <td><%= shifts_prev_7d(@user) %></td>
    <td><%= shifts_next_7d(@user) %></td>
    <td><%= shifts_total(@user) %></td>
  </tr>

  <% else %>

    <tr class="error">
    <td><%= @user.name %> (Rejected Offer)</a></td>
    <td><%= user_available(@shift, @user) %></td>
    <td><%= shifts_prev_7d(@user) %></td>
    <td><%= shifts_next_7d(@user) %></td>
    <td><%= shifts_total(@user) %></td>
  </tr>

  <% end %>

<% end %>

