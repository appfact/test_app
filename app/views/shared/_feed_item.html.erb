<% @userf = User.find(feed_item.user_id) %>
<li id="<%= feed_item.id %>">
  <%= link_to gravatar_for(@userf), @userf %>
  <span class="user">
    
  </span>
  <span class="role"><%= link_to feed_item.role, feed_item %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(feed_item.created_at) %> ago by
    <%= link_to @userf.name, @userf %>
  </span>
    <% if current_user?(@userf) %>
    <%= link_to "delete", feed_item, method: :delete,
                                     data: { confirm: "You sure?" },
                                     title: feed_item.role %>
  <% end %>
</li>