<!DOCTYPE html>
<html>
<head>
  <title>TestApp <%= full_title(yield(:title)) %></title>
  
    <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial scale 1.0">

  		<%= javascript_include_tag "application" %>
  		<link href="https://immense-mesa-9585.herokuapp.com/bootstrap.css" rel="stylesheet" type="text/css" media="screen">
		<link href="https://immense-mesa-9585.herokuapp.com/bootstrap-responsive.css" rel="stylesheet" type="text/css" media="screen"> 
		<%= render 'layouts/shim' %>
		<%= csrf_meta_tags %>
		
</head>
<body>
<div class='container-fluid'>
<header class="row-fluid">
				<div class="span12" style="margin-top:15px">
					<nav class="navbar">
						<div class="navbar-inner">
						<%= link_to "LOGO", home_path, class: "brand" %>
						<a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
							<span class="icon-bar"></span>
							<span class="icon-bar"></span>
							<span class="icon-bar"></span>


						</a>
							
							<div class="nav-collapse collapse">
							<ul class="nav">
								<li class="divider-vertical"></li>
								<li><%= link_to "Shs", home_path %></li>
								<li><%= link_to "Contact", contact_path %></li>
								<!-- checking if the user is signed in -->
								 <% if !signed_in? %>
								 <li><%= link_to "Sign in", signin_path %></li>
								 <% else %>
<!--start of dropdown -->
								<li class="dropdown">
									<a href="#" class="dropdown-toggle" data-toggle="dropdown">Account
									<b class="caret"></b>
									</a>
									
									<ul class="dropdown-menu">
										<li><%= link_to "Account Settings", edit_user_path(current_user) %></li>
										<li><%= link_to "Sign out", signout_path, method: "delete" %></li>
										</ul>
									</li>
									<% end %>
<!-- end of dropdown -->
									
								<li class="divider vertical"></li>
							</ul>
						</div>
						</div>
					</nav>
				</div>
			</header>
</div>
<div class='container-fluid'>
			<div class="row-fluid" id="main-content">
 <% flash.each do |key, value| %>
        <div class="alert alert-<%= key %>"><%= value %></div>
      <% end %>
<%= yield %>
<p></p>
<p></p>
<%= debug(params) if Rails.env.development? %>
</div>

</div>
			<script src="https://immense-mesa-9585.herokuapp.com/jquery-latest.js"></script>
		<script src="https://immense-mesa-9585.herokuapp.com/bootstrap.js"></script> 

</body>
</html>
