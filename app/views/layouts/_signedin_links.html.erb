<% if current_user.admin? %>
<%= render 'layouts/admin_links' %>
<% else %>
<%= render 'layouts/normal_user_links' %>
<% end %>

<!-- menu options for user account links -->
<div style="display:inline-block" class="pull-right">
	<ul class="nav pull-right">
		<li class="dropdown">
			<a href="#" class="dropdown-toggle" data-toggle="dropdown">
			<strong><i class="icon-user"></i> <%= current_user.name %></strong>
			<b class="caret"></b>
			</a>
									
			<ul class="dropdown-menu">
				<li><%= link_to "Account settings", user_path(current_user.id) %></li>
				<li><%= link_to "Sign out", signout_path, method: "delete" %></li>
				<li class="divider-horizontal"></li>

			</ul>
		</li>
	</ul>
</div>